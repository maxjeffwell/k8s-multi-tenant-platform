PORT=3000
NODE_ENV=development

# Ingress Configuration
INGRESS_DOMAIN=your_domain.nip.io
INGRESS_CLASS=traefik

# ===========================================
# LOCAL MONGODB CREDENTIALS (VPS Kubernetes)
# ===========================================

# MongoDB - Educationelly (local pod)
MONGODB_EDUCATIONELLY_CONNECTION_STRING=mongodb://admin:your_password@mongodb-educationelly.default.svc.cluster.local:27017/educationelly?authSource=admin
MONGODB_EDUCATIONELLY_USERNAME=admin
MONGODB_EDUCATIONELLY_PASSWORD=your_password

# MongoDB - Educationelly GraphQL (local pod)
MONGODB_EDUCATIONELLY_GRAPHQL_CONNECTION_STRING=mongodb://admin:your_password@mongodb-educationelly-graphql.default.svc.cluster.local:27017/educationelly?authSource=admin
MONGODB_EDUCATIONELLY_GRAPHQL_USERNAME=admin
MONGODB_EDUCATIONELLY_GRAPHQL_PASSWORD=your_password

# MongoDB - IntervalAI (local pod)
MONGODB_INTERVALAI_CONNECTION_STRING=mongodb://admin:your_password@mongodb-intervalai.default.svc.cluster.local:27017/intervalai?authSource=admin
MONGODB_INTERVALAI_USERNAME=admin
MONGODB_INTERVALAI_PASSWORD=your_password

# ===========================================
# LOCAL POSTGRESQL CREDENTIALS (VPS Kubernetes)
# ===========================================

# PostgreSQL - Code-Talk (local pod)
POSTGRES_CODETALK_CONNECTION_STRING=postgres://postgres:your_password@postgresql-codetalk.default.svc.cluster.local:5432/codetalk
POSTGRES_CODETALK_USERNAME=postgres
POSTGRES_CODETALK_PASSWORD=your_password

# ===========================================
# NEON POSTGRESQL (Cloud - for bookmarked)
# ===========================================
NEONDB_CONNECTION_STRING=postgres://username:password@host/database?sslmode=require
NEONDB_USERNAME=your_username
NEONDB_PASSWORD=your_password

# ===========================================
# LOCAL REDIS CREDENTIALS (VPS Kubernetes)
# ===========================================
REDIS_LOCAL_CONNECTION_STRING=redis://:your_password@redis.default.svc.cluster.local:6379
REDIS_LOCAL_PASSWORD=your_password
