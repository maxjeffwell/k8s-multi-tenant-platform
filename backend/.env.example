PORT=3000
NODE_ENV=development

# Ingress Configuration
INGRESS_DOMAIN=your_domain.nip.io
INGRESS_CLASS=nginx

# MongoDB Atlas Configuration
# Get these from: https://cloud.mongodb.com/v2#/account/publicApi
ATLAS_PUBLIC_KEY=your_atlas_public_key
ATLAS_PRIVATE_KEY=your_atlas_private_key
ATLAS_PROJECT_ID=your_atlas_project_id
ATLAS_CLUSTER_NAME=your_cluster_name
# Format: cluster0.xxxxx.mongodb.net (without mongodb+srv:// prefix)
ATLAS_CLUSTER_URL=your_cluster_url

# Database Credentials - Test Database
TEST_DB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database
TEST_DB_USERNAME=your_username
TEST_DB_PASSWORD=your_password

# Database Credentials - Educationelly Database
EDUCATIONELLY_DB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database
EDUCATIONELLY_DB_USERNAME=your_username
EDUCATIONELLY_DB_PASSWORD=your_password

# Database Credentials - Spaced Repetition Database
SPACED_REPETITION_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database
SPACED_REPETITION_USERNAME=your_username
SPACED_REPETITION_PASSWORD=your_password

# Database Credentials - PostgreSQL AWS RDS
POSTGRES_AWS_CONNECTION_STRING=postgres://username:password@host:5432/database
POSTGRES_AWS_USERNAME=your_username
POSTGRES_AWS_PASSWORD=your_password

# Database Credentials - Neon PostgreSQL
NEONDB_CONNECTION_STRING=postgres://username:password@host/database?sslmode=require
NEONDB_USERNAME=your_username
NEONDB_PASSWORD=your_password
